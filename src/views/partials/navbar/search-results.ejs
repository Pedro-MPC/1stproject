<div id="search-results" class="bg-white overflow-auto search-results" style="max-height: 300px">
    <% if(SEARCH != 'notFound' ){ %> <% if(SEARCH.length > 1 ){ SEARCH.forEach(item => {%>
    <div class="d-flex align-items-center p-2">
        <div style="width: 60px">
            <img
                style="width: 50px"
                loading="lazy"
                src="img/loading-img.webp"
                data-src="<%- item.result.img %>"
                alt=""
            />
        </div>
        <div>
            <div style="max-width: 200px; flex-grow: 1">
                <p
                    class="mb-0 text-truncate fs-6"
                    style="
                        overflow: hidden;
                        text-overflow: ellipsis;
                        display: -webkit-box;
                        -webkit-line-clamp: 1; /* number of lines to show */
                        line-clamp: 2;
                        -webkit-box-orient: horizontal;
                    "
                >
                    <%- item.result.name %>
                </p>
            </div>
            <p class="mb-0 text-danger fw-bold">
                <%- item.result.preco.toLocaleString('en-US', { minimumFractionDigits: 2 }) %>€
            </p>
        </div>
        <a href="/product?pid=<%- item.result._id %>" class="font-size-25 text-black ml-auto"
            ><span class="fs-6 bx bx-search-alt-2 mr-1"></span
        ></a>
    </div>
    <% })}else{ %>
    <div class="d-flex align-items-center p-2">
        <div style="width: 60px">
            <img
                loading="lazy"
                style="width: 50px"
                src="img/loading-img.webp"
                data-src="<%- SEARCH.result.img %>"
                alt=""
            />
        </div>
        <div>
            <p class="mb-0"><%- SEARCH.result.name %></p>
            <p class="mb-0 text-danger fw-bold">
                <%- SEARCH.result.preco.toLocaleString('en-US', { minimumFractionDigits: 2 })%>€
            </p>
        </div>
        <a href="/product?pid=<%- SEARCH.result._id %>" class="font-size-25 text-black ml-auto"
            ><span class="bx bx-search-alt-2 mr-1"></span
        ></a>
    </div>
    <% } %> <% }else{ %>
    <p class="text-center lighter-text mt-3">No products found.</p>
    <% } %>
</div>
