<link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css" />

<center>
    <div class="container">
        <div class="owl-carousel owl-theme" style="color: black">
            <% PRODUCTS.forEach(PRODUCTS => {%>
            <div class="item">
                <div class="card card-body" style="width: 350px; overflow: hidden">
                    <div class="media align-items-center text-center text-lg-left flex-column">
                        <div class="mr-2 mb-3 mb-lg-0">
                            <img
                                style="margin: auto; display: block"
                                class="mb-4"
                                src="<%- PRODUCTS.img %>"
                                width="200"
                                height="140"
                                alt=""
                            />
                        </div>
                        <div class="media-body text-center">
                            <h6 class="media-title font-weight-semibold">
                                <a href="/product?pid=<%-PRODUCTS._id%>" data-abc="true"> <%- PRODUCTS.name %> </a>
                            </h6>

                            <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                                <li class="list-inline-item">
                                    <a href="#" class="text-muted" data-abc="true"><%- PRODUCTS.descCat %></a>
                                </li>
                            </ul>

                            <p
                                class="mb-3"
                                style="
                                    text-align: justify;
                                    overflow: hidden;
                                    text-overflow: ellipsis;
                                    display: -webkit-box;
                                    -webkit-line-clamp: 5; /* number of lines to show */
                                    line-clamp: 2;
                                    -webkit-box-orient: vertical;
                                    font-size: 15px;
                                "
                            >
                                <%- (PRODUCTS.desc);%> <%if(PRODUCTS.desc.length> 250){%>...<% } %>
                            </p>
                        </div>

                        <div class="mt-lg-3 ml-lg-3 text-center">
                            <h3 class="font-weight-semibold mb-4 textprice" style="color: #dc3545">
                                <%- PRODUCTS.preco.toFixed(2) %>â‚¬
                            </h3>

                            <button style="width: 30vh" type="button" class="btn btn-danger mt-1 text-white">
                                <span
                                    style="font-size: 25px; vertical-align: middle"
                                    class="bx bx-cart-add mr-2 center-text"
                                ></span
                                >Add to cart
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</center>
