<!-- Button trigger modal -->
<link rel="stylesheet" href="stylesheets/cartstyle-checkout.css" />
<!-- Modal -->

<div
    class="modal fade bd-example-modal-xl"
    tabindex="-1"
    id="modalORDERDetails"
    role="dialog"
    aria-labelledby="myExtraLargeModalLabel"
    aria-hidden="true"
>
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" style="border-radius: 40px">
            <div class="modal-body" style="padding: 40px">
                <div class="text-center d-flex" style="align-items: baseline; justify-content: center; font-size: 30px">
                    <div>
                        <% if(ORDER.status == 1){ %>
                        <img src="img/order-processing.png" loading="lazy" alt="" class="mb-2" style="height: 35px" />
                        <% } else if(ORDER.status == 2){%>
                        <img src="img/order-delivered.png" loading="lazy" alt="" class="mb-2" style="height: 35px" />
                        <% } else if(ORDER.status == 3){%>
                        <img src="img/order-error.png" loading="lazy" alt="" class="mb-2" style="height: 35px" />
                        <% }%>
                    </div>
                    <p class="text-center fw-light mr-2 ml-2">Shipping Details - Order <%- ORDER.id %></p>
                </div>

                <form id="checkoutForm">
                    <div class="row">
                        <div class="col-6">
                            <div class="row mt-3">
                                <div class="col-lg-6 col-md-12">
                                    <label class="form-label mt-2" for="">First Name</label
                                    ><span class="text-danger">*</span>
                                    <input
                                        class="form-control"
                                        style="height: 50px"
                                        id="fname"
                                        type="text"
                                        placeholder="First Name"
                                        value="<%- ORDER.customer_fname %>"
                                        disabled
                                    />
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <label class="form-label mt-2" for="">Last Name</label
                                    ><span class="text-danger">*</span>
                                    <input
                                        class="form-control"
                                        style="height: 50px"
                                        id="lname"
                                        type="text"
                                        placeholder="Last Name"
                                        value="<%- ORDER.customer_lname %>"
                                        disabled
                                    />
                                </div>
                            </div>
                            <label class="form-label mt-2" for="">Email</label><span class="text-danger">*</span>
                            <input
                                class="form-control"
                                style="height: 50px"
                                id="email"
                                type=""
                                placeholder="mail@mail.com"
                                value="<%- ORDER.email %>"
                                disabled
                            />
                            <!--  -->
                            <label class="form-label mt-1" for="">Address</label><span class="text-danger">*</span>
                            <input
                                class="form-control"
                                id="address"
                                type=""
                                style="height: 50px"
                                placeholder="Street Line 1"
                                value="<%- ORDER.address %>"
                                disabled
                            />
                            <label class="form-label mt-1" for="">City</label><span class="text-danger">*</span>
                            <input
                                class="form-control"
                                id="city"
                                style="height: 50px"
                                type=""
                                placeholder="City"
                                value="<%- ORDER.city %>"
                                disabled
                            />
                        </div>
                        <div class="col-6">
                            <div data-cart="true" class="isCart checkout-cart mt-4" style="height: 40vh">
                                <div data-cart="true" class="shopping-cart-checkout isCart" style="padding-top: 0px">
                                    <!--end shopping-cart-checkout-header -->
                                    <div data-cart="true" id="productListOrder" style="overflow-y: auto">
                                        <ul
                                            data-cart="true"
                                            class="shopping-cart-checkout-items isCart"
                                            style="max-height: calc(33vh - 1rem); overflow: auto; padding-top: -40px"
                                            id="productsListCart"
                                        >
                                            <% ORDER.products.forEach(item => {%>
                                            <li data-cart="true" class="clearfix isCart">
                                                <img
                                                    data-cart="true"
                                                    src="<%- item.img %>"
                                                    loading="lazy"
                                                    alt="item1"
                                                    class="mt-3 mr-2"
                                                    style="max-width: 75px"
                                                />
                                                <span data-cart="true" class="item-name isCart" style="text-align: left"
                                                    ><a class="text-black" href="/product?pid=<%- item.id %>"
                                                        ><p
                                                            style="
                                                                white-space: nowrap;
                                                                overflow: hidden;
                                                                display: block;
                                                                text-overflow: ellipsis;
                                                                font-size: 15px;
                                                                margin-top: 10px;
                                                            "
                                                        >
                                                            <%- item.name %>
                                                        </p></a
                                                    ></span
                                                >

                                                <span
                                                    data-cart="true"
                                                    class="item-price fw-bold"
                                                    style="float: left; margin-top: -10px"
                                                    ><%- item.price.toFixed(2) %>€</span
                                                >
                                            </li>
                                            <% })%>
                                        </ul>
                                        <div
                                            style="
                                                height: 3vh;
                                                background-color: white;
                                                bottom: 20px;
                                                position: absolute;
                                                border-top: 1px solid rgba(0, 0, 0, 0.253);
                                                padding: 0px 20px 20px 20px;
                                                right: 3em;
                                                left: 3em;
                                            "
                                        >
                                            <span
                                                data-cart="true"
                                                class="lighter-text mt-2 mb-2 fs-6"
                                                style="float: left"
                                                >Total:</span
                                            >
                                            <span
                                                data-cart="true"
                                                class="main-color-text mt-2 mb-2 fw-bold"
                                                style="float: right; font-size: 15px"
                                                id="totalCart"
                                                ><%- ORDER.total_price.toFixed(2) %>€</span
                                            >
                                        </div>
                                    </div>
                                </div>
                                <!--end shopping-cart-checkout -->
                            </div>
                        </div>
                    </div>
                    <button
                        data-bs-dismiss="modal"
                        class="btn btn-block btn-main-style p-2 mt-4"
                        style="border-radius: 20px"
                        type="button"
                    >
                        Close
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
