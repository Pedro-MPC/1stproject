<link rel="stylesheet" href="stylesheets/account-order-details.css" />
<div>
    <div class="container bg-transparent" style="width: 100%; max-width: 650px">
        <h3 class="fw-bold mb-4 text-lg-left text-md-center text-sm-center mt-2">
            Your Orders <% if(ORDERS != 'notFound') { %> (<%- ORDERS.length%>)<% }%>
        </h3>
        <div
            class="fs-6 bg-transparent"
            id="orderList"
            style="max-height: calc(40vh - 1rem); overflow-y: auto; overflow-x: hidden"
        >
            <% if(ORDERS != 'notFound') { %> <% ORDERS.forEach(order => {%>
            <div class="mb-2" style="max-width: 100%; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px">
                <div
                    style="
                        height: auto;
                        border: 1px solid rgba(0, 0, 0, 0.235);
                        width: 100%;
                        height: auto;
                        min-height: 90px;
                        border-radius: 20px;
                    "
                >
                    <div class="row">
                        <div class="col-lg-2 col-md-12 text-center text-md-center text-sm-center">
                            <% if(order.status == 1){ %>
                            <img
                                src="img/order-processing.png"
                                alt="Order Processing"
                                class="ml-lg-3 mt-2"
                                style="height: 60px"
                                loading="lazy"
                            />
                            <% } else if(order.status == 2){%>
                            <img
                                src="img/order-delivered.png"
                                alt="Order Delivered"
                                class="ml-lg-3 mt-2"
                                style="height: 60px"
                                loading="lazy"
                            />
                            <% } else if(order.status == 3){%>
                            <img
                                src="img/order-error.png"
                                alt="Order Error"
                                class="ml-lg-3 mt-2"
                                style="height: 60px"
                                loading="lazy"
                            />
                            <% }%>
                        </div>
                        <div class="col-lg-7 col-md-12 col-sm-12 mt-3">
                            <div
                                class="d-flex justify-content-md-center justify-content-lg-start justify-content-center"
                            >
                                <p style="margin: 0px 0; font-size: 14px">Order Nº <%- order.id %></p>
                            </div>
                            <div
                                style="
                                    display: flex !important;
                                    flex-direction: row;
                                    align-items: flex-end;
                                    font-size: 14px;
                                "
                                class="justify-content-lg-start justify-content-md-center justify-content-center"
                            >
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                                <a id="shipping-order" data-orderid="<%- order.id %>" href="#">Shipping Details</a>
                                <p class="mr-2 ml-2" style="margin: 0px 0">|</p>
                                <a id="products-order" data-orderid="<%- order.id %>" href="#">Products</a>
                            </div>
                        </div>
                        <div
                            class="col-lg-3 col-md-12 col-sm-12 mt-3 text-md-center text-sm-center"
                            style="display: flex !important; flex-direction: column; align-items: center"
                        >
                            <div class="mr-2 text-center">
                                <% if(order.status == 1){ %>
                                <p style="margin: 1px 0" class="fw-bold text-blue">Processing</p>
                                <% } else if(order.status == 2){%>
                                <p style="margin: 1px 0" class="fw-bold text-success">Delivered</p>
                                <% } else if(order.status == 3){%>
                                <p style="margin: 1px 0" class="fw-bold text-danger">Error</p>

                                <% }%>
                                <p><%- order.total_price.toLocaleString('en-US', { minimumFractionDigits: 2 }) %>€</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% })}%>
        </div>
        <% if(ORDERS != 'notFound'){%>
        <p class="lighter-text text-center mt-4">Here are all the details for your last orders.</p>
        <% }else{%>
        <p class="lighter-text text-center mt-4">You have no orders to list.</p>
        <% }%>
    </div>
</div>
