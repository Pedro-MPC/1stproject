<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

<div class="container productsList d-flex justify-content-center mt-50 mb-50">
    <div class="row justify-content-center">
        <% PRODUCTS.forEach(PRODUCTS => {%>
        <div class="col-md-4 mt-3">
            <div class="card card-body" style="height: 530px !important; overflow: hidden">
                <div class="media align-items-center text-center text-lg-left flex-column">
                    <div class="mr-2 mb-3 mb-lg-0">
                        <img
                            style="margin: auto; display: block"
                            class="mb-4"
                            src="<%- PRODUCTS.img %>"
                            width="200"
                            height="140"
                            alt=""
                        />
                    </div>
                    <div class="media-body text-center">
                        <h6 class="media-title font-weight-semibold">
                            <a href="/product?pid=<%-PRODUCTS._id%>" data-abc="true"> <%- PRODUCTS.name %> </a>
                        </h6>

                        <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                            <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true">Phones</a></li>
                            <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true">Mobiles</a></li>
                        </ul>

                        <p
                            class="mb-3"
                            style="
                                overflow: hidden;
                                text-overflow: ellipsis;
                                display: -webkit-box;
                                -webkit-line-clamp: 5; /* number of lines to show */
                                line-clamp: 2;
                                -webkit-box-orient: vertical;
                            "
                        >
                            <%- (PRODUCTS.desc);%> <%if(PRODUCTS.desc.length> 250){%>...<% } %>
                        </p>
                    </div>

                    <div class="mt-lg-3 ml-lg-3 text-center">
                        <h3 class="font-weight-semibold mb-4"><%- PRODUCTS.preco.toFixed(2) %>â‚¬</h3>

                        <button type="button" class="btn btn-danger mt-2 text-white">
                            <span
                                style="font-size: 25px; vertical-align: middle"
                                class="bx bx-cart-add mr-2 center-text"
                            ></span
                            >Add to cart
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
