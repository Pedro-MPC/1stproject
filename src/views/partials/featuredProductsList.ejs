<link rel="stylesheet" href="dist/font-awesome.min.css" />
<link href="dist/boxicons/css/boxicons.min.css" rel="stylesheet" />
<link href="stylesheets/product-details.css" rel="stylesheet" />

<div class="mt-4 featuredProds">
    <h1 class="display-5 mt-2 text-center mb-3" style="color: black; font-weight: 500; font-size: 40px; color: white">
        FEATURED PRODUCTS
    </h1>
    <div class="container productsList d-flex justify-content-center mt-30 mb-50">
        <div class="row">
            <% FEATUREDPRODUCTS.forEach(FEATUREDPRODUCTS => {%>
            <div class="col mt-3" onclick="window.location='/product?pid=<%=FEATUREDPRODUCTS.id%>';">
                <div
                    class="card card-body productOnList"
                    style="
                        min-width: 300px;
                        height: 100% !important;
                        overflow: hidden;
                        padding: 20px;
                        border-radius: 20px;
                    "
                >
                    <div class="media align-items-center text-center text-lg-left flex-column">
                        <div class="mr-2 mb-3 mb-lg-0">
                            <img
                                style="margin: auto; display: block"
                                class="mb-4"
                                src="<%- FEATUREDPRODUCTS.img %>"
                                width="200"
                                height="140"
                                alt=""
                            />
                        </div>
                        <div class="media-body text-center">
                            <h6 class="media-title font-weight-semibold">
                                <a
                                    href="/product?pid=<%-FEATUREDPRODUCTS.id%>"
                                    data-abc="true"
                                    style="
                                        text-align: center;
                                        overflow: hidden;
                                        text-overflow: ellipsis;
                                        display: -webkit-box;
                                        -webkit-line-clamp: 1; /* number of lines to show */
                                        line-clamp: 2;
                                        -webkit-box-orient: vertical;
                                        font-size: 15px;
                                    "
                                >
                                    <%- FEATUREDPRODUCTS.name %>
                                </a>
                            </h6>
                        </div>

                        <div class="ml-lg-3 text-center">
                            <h3 class="font-weight-semibold mb-2"><%- FEATUREDPRODUCTS.price.toFixed(2) %>â‚¬</h3>

                            <a href="/product?pid=<%-FEATUREDPRODUCTS.id%>">
                                <button type="button" class="btn btn-danger text-white">
                                    <span
                                        style="font-size: 25px; vertical-align: middle"
                                        class="bx bx-check-circle mr-2 center-text"
                                    ></span
                                    >Check this Product
                                </button></a
                            >
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>
