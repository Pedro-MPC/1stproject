<link rel="stylesheet" href="../../../dist/font-awesome.min.css" />
<link href="../../../dist/boxicons.min.css" rel="stylesheet" />
<div class="mt-3" style="background-color: rgb(11, 8, 57); padding: 2%">
    <h1 class="display-5 mt-10 center-text mb-3" style="color: black; font-weight: 500; font-size: 40px; color: white">
        FEATURED PRODUCTS
    </h1>
    <div class="container productsList d-flex justify-content-center mt-30 mb-50">
        <div class="row">
            <% FEATUREDPRODUCTS.forEach(FEATUREDPRODUCTS => {%>
            <div class="col mt-3">
                <div
                    class="card card-body productOnList"
                    style="
                        min-width: 300px;
                        height: 100% !important;
                        overflow: hidden;
                        padding: 20px;
                        border-radius: 20px;
                    "
                >
                    <div class="media align-items-center text-center text-lg-left flex-column">
                        <div class="mr-2 mb-3 mb-lg-0">
                            <img
                                style="margin: auto; display: block"
                                class="mb-4"
                                src="<%- FEATUREDPRODUCTS.img %>"
                                width="200"
                                height="140"
                                alt=""
                            />
                        </div>
                        <div class="media-body text-center">
                            <h6 class="media-title font-weight-semibold">
                                <a
                                    href="/product?pid=<%-FEATUREDPRODUCTS._id%>"
                                    data-abc="true"
                                    style="
                                        text-align: center;
                                        overflow: hidden;
                                        text-overflow: ellipsis;
                                        display: -webkit-box;
                                        -webkit-line-clamp: 1; /* number of lines to show */
                                        line-clamp: 2;
                                        -webkit-box-orient: vertical;
                                        font-size: 15px;
                                    "
                                >
                                    <%- FEATUREDPRODUCTS.name %>
                                </a>
                            </h6>

                            <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
                                <li class="list-inline-item">
                                    <a href="#" class="text-muted" data-abc="true"><%- FEATUREDPRODUCTS.descCat %></a>
                                </li>
                            </ul>
                        </div>

                        <div class="ml-lg-3 text-center">
                            <h3 class="font-weight-semibold mb-2"><%- FEATUREDPRODUCTS.preco.toFixed(2) %>â‚¬</h3>

                            <a href="/product?pid=<%-PRODUCTS._id%>">
                                <button type="button" class="btn btn-danger text-white">
                                    <span
                                        style="font-size: 25px; vertical-align: middle"
                                        class="bx bx-cart-add mr-2 center-text"
                                    ></span
                                    >Check this Product
                                </button></a
                            >
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>
